//Source aid: N220 FA2020 Animation and Conditionals
let xPos = 0; 
let yPos = 40; 

let xSpeed = 3;
let ySpeed = 3; 
//create the Canvas
function setup(){
  createCanvas(400,300);
}
//make background light yellow 
function draw() {
  background(255, 254, 237)
  xPos = xPos + xSpeed; 
  yPos = yPos + ySpeed; 

  //if statements: what to do when block of code is executed 
  //how to fill right half red
  //mouseX and mouse Y for coordinates of the mouse
  if (mouseX>100) 
    {
  fill(245, 27, 60);
  circle (mouseX, mouseY, 30)
    }
    //how to fill left half blue 
  if (xPos > 100) {
    fill(71, 124, 237);
  }
  circle(mouseX, mouseY, 30);
}
